# Cache-Control Headers for DigitalOcean App Platform

# HTML files - No caching for dynamic content routing
/*
  Cache-Control: no-cache, no-store, must-revalidate

/index.html
  Cache-Control: no-cache, no-store, must-revalidate

/*.html
  Cache-Control: no-cache, no-store, must-revalidate

# JavaScript and CSS with hash in filename - Cache for 1 year
/assets/*.js
  Cache-Control: public, max-age=31536000, immutable

/assets/*.css
  Cache-Control: public, max-age=31536000, immutable

# Images - Cache for 1 year (can be updated with new filenames)
/assets/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/assets/*.jpeg
  Cache-Control: public, max-age=31536000, immutable

/assets/*.png
  Cache-Control: public, max-age=31536000, immutable

/assets/*.webp
  Cache-Control: public, max-age=31536000, immutable

/assets/*.svg
  Cache-Control: public, max-age=31536000, immutable

/assets/*.gif
  Cache-Control: public, max-age=31536000, immutable

# Fonts - Cache for 1 year
/assets/*.woff
  Cache-Control: public, max-age=31536000, immutable

/assets/*.woff2
  Cache-Control: public, max-age=31536000, immutable

/assets/*.ttf
  Cache-Control: public, max-age=31536000, immutable

/assets/*.eot
  Cache-Control: public, max-age=31536000, immutable

# JSON files - Short cache (1 hour) for translation files that may update
/assets/*.json
  Cache-Control: public, max-age=3600

# Manifest and other PWA files - Cache for 1 day
/manifest.json
  Cache-Control: public, max-age=86400

# Robots and sitemap - Cache for 1 day
/robots.txt
  Cache-Control: public, max-age=86400

/sitemap.xml
  Cache-Control: public, max-age=86400

# Favicon - Cache for 1 week
/favicon.ico
  Cache-Control: public, max-age=604800

/*.svg
  Cache-Control: public, max-age=604800
